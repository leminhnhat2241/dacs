@model E_Sport.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<h2>Chi tiết đơn hàng @Model.Id</h2>

<div class="mb-3">
    <strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")<br />
    <strong>Trạng thái:</strong>
    @(Model.Status == "Pending" ? "Đang chờ duyệt" :
        Model.Status == "Approved" ? "Đã duyệt" :
        Model.Status == "Cancelled" ? "Đã hủy" :
        "Không xác định")<br />
    <strong>Tổng tiền:</strong> @Model.TotalPrice.ToString("N0") VNĐ
</div>

<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Price.ToString("N0") VNĐ</td>
                <td>@item.Quantity</td>
                <td>@(item.Price * item.Quantity) VNĐ</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary mt-3">Quay lại danh sách</a>

@if (Model.Status == "Pending")
{
    <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Bạn chắc chắn muốn hủy đơn hàng này?');">
        <button type="submit" class="btn btn-danger mt-3">Hủy đơn hàng</button>
    </form>
}
