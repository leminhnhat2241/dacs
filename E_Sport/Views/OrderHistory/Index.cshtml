@model IEnumerable<E_Sport.Models.Order>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<h2>Lịch sử đơn hàng</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Bạn chưa có đơn hàng nào.
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Xem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@order.TotalPrice.ToString("N0") VNĐ</td>
                    <td>
                        @(order.Status == "Pending" ? "Đang chờ duyệt" :
                            order.Status == "Approved" ? "Đã duyệt" :
                            order.Status == "Cancelled" ? "Đã hủy" :
                            "Không xác định")
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
