@model IEnumerable<E_Sport.Models.Product>

<h2>Danh Sách Sản Phẩm</h2>
@if (!Model.Any())
{
	<div class="alert alert-info">
		Bạn chưa có sản phẩm nào.
	</div>
}
else{
	<div class="container mt-4">

		<div class="row">
			@foreach (var product in Model)
			{
				<div class="col-md-3 mb-4">
					<div class="card shadow-sm border-light">
						<img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: contain;">
						<div class="card-body">
							<h5 class="card-title">@product.Name</h5>
							<p class="card-text">@product.Price.ToString("N0", System.Globalization.CultureInfo.CurrentCulture)</p>
							<p class="card-text">@product.Category?.Name</p>
							<a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary btn-sm">Chi tiết</a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
}

<!-- Thêm CDN cho Bootstrap nếu chưa có -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
