
@model IEnumerable<E_Sport.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center mb-4">Danh mục sản phẩm</h2>

<div class="mb-3 text-end">
    <a asp-action="Add" class="btn btn-success">Thêm loại mới</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Mã loại sản phẩm</th>
            <th scope="col">Loại sản phẩm</th>
            <th scope="col">Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <form asp-action="DeleteConfirmed" asp-route-id="@item.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Bạn có chắc chắn muốn xóa loại này không?')">
                            Xóa
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

