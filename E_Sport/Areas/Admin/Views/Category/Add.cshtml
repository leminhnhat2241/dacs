            <form asp-action="Add">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Tên loại sản phẩm</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên loại sản phẩm" />
