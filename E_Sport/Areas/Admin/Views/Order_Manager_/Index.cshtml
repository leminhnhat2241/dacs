@model IEnumerable<E_Sport.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<h2>Danh sách đơn hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Email</th>
            <th>Ngày đặt</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ApplicationUser?.FullName</td>
                <td>@order.ApplicationUser?.Email</td>
                <td>@order.OrderDate.AddHours(7).ToString("dd/MM/yyyy HH:mm:ss")</td> @* +7 để theo giờ vn *@
                <td>
                    @(order.Status == "Pending" ? "Đang chờ duyệt" :
                        order.Status == "Approved" ? "Đã duyệt" :
                        order.Status == "Cancelled" ? "Đã hủy" :
                        "Không xác định")
                </td>
                <td>
                    <a asp-action="EditStatus" asp-route-id="@order.Id" class="btn btn-primary btn-sm">Đổi trạng thái</a>
                </td>
            </tr>
        }
    </tbody>
</table>
