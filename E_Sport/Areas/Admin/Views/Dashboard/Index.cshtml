@model E_Sport.Models.ViewModels.DashboardViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Sản phẩm</div>
            <div class="card-body">
                <h5 class="card-title">@Model.ProductCount</h5>
                <p class="card-text">Tổng số sản phẩm trong hệ thống</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Đơn hàng</div>
            <div class="card-body">
                <h5 class="card-title">@Model.OrderCount</h5>
                <p class="card-text">Tổng số đơn hàng đã tạo</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Người dùng</div>
            <div class="card-body">
                <h5 class="card-title">@Model.UserCount</h5>
                <p class="card-text">Tổng số người dùng đăng ký</p>
            </div>
        </div>
    </div>
</div>
