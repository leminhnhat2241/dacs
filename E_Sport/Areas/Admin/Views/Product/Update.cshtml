

@model E_Sport.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    // Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">Cập nhật sản phẩm</h2>
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Tên sản phẩm</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Giá</label>
                <input asp-for="Price" class="form-control" placeholder="Nhập giá sản phẩm" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Nhãn hiệu</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                    <option value="">-- Chọn loại sản phẩm --</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">Hình ảnh sản phẩm</label>
                <input type="file" asp-for="ImageUrl" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mt-2">
                        <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-width: 200px;" />
                    </div>
                }
            </div>
            <div class="mb-3">
                <label asp-for="FieldTypeId" class="form-label">Loại sân</label>
                <select asp-for="FieldTypeId" asp-items="ViewBag.FieldTypes" class="form-select">
                    <option value="">-- Chọn loại sân --</option>
                </select>
                <span asp-validation-for="FieldTypeId" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label class="form-label">Nhập các size (phân cách bằng dấu phẩy):</label>
                <input type="text" name="SizeInput" class="form-control" placeholder="Ví dụ: 38,39,40" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary px-4">Cập nhật</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}