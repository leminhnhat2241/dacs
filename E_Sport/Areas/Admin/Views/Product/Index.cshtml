
@model IEnumerable<E_Sport.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Danh sách sản phẩm</h2>
        <a asp-action="Add" class="btn btn-success"><i class="fas fa-plus"></i> Thêm sản phẩm</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Tên</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Ảnh sản phẩm</th>
                    <th scope="col">Loại</th>
                    <th scope="col">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C0")</td>
                        <td>
                            <img src="@Url.Content(product.ImageUrl)" alt="@product.Name" class="img-thumbnail" style="max-width: 100px; max-height: 100px;">
                        </td>
                        <td>@product.Category?.Name</td>
                        <td>
                            <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Chi tiết</a>
                            <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Cập nhật</a>
                            <form asp-action="DeleteConfirmed" asp-route-id="@product.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">
                                    Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>