@model E_Sport.Models.Product

@{
    ViewData["Title"] = "Detail";
    // Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="text-primary">@Model.Name</h2>
        <hr>
        <div class="row">
            <div class="col-md-6">
                <h4 class="text-danger">Giá: @Model.Price VNĐ</h4>
                <p class="mt-3">@Model.Description</p>
            </div>
            <div class="col-md-6 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded shadow" style="max-width: 100%; height: auto;" />
                }
            </div>
        </div>
        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>